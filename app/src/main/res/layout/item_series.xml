<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.theone.demo.entity.Series" />

    </data>

    <com.qmuiteam.qmui.layout.QMUIRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_sname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:text="@{data.sname}"
            android:textColor="@color/qmui_config_color_gray_5"
            tools:text="奥迪(进口)"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@{data.name}"
            tools:text="奥迪A6L"
            android:textStyle="bold"
            android:textColor="@color/qmui_config_color_gray_1" />


    </com.qmuiteam.qmui.layout.QMUIRelativeLayout>
</layout>